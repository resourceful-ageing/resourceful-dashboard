extends layout

block content
  .container
    .row
      .col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Sign in to continue to Resourceful Ageing
        .account-wall
          img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120', alt='')
          form(action="/login" method="post" class="form-signin")
            input.form-control(name="username" type='username', placeholder='Username', required='', autofocus='')
            input.form-control(name="password" type='password', placeholder='Password', required='')
            button.btn.btn-lg.btn-primary.btn-block(type='submit')
              | Sign in
            span.clearfix
